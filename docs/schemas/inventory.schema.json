{
  "title": "Inventory Schema (v0)",
  "type": "object",
  "properties": {
    "target": {
      "type": "object",
      "properties": {
        "path": { "type": "string" },
        "type": { "type": "string", "enum": ["dll", "exe", "cli", "repo", "other"] },
        "hints": { "type": "string" }
      },
      "required": ["path", "type"]
    },
    "invocables": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "kind": { "type": "string", "enum": ["export", "cli_command", "com", "other"] },
          "source": { "type": "string" },
          "confidence": { "type": "string", "enum": ["high", "medium", "low"] },
          "details": { "type": "object" }
        },
        "required": ["id", "name", "kind", "source", "confidence"]
      }
    }
  },
  "required": ["target", "invocables"]
}
